{
    "name": "newwaybrazil/date-formatter-php",
    "description": "PHP library to format date",
    "version": "1.0.0",
    "type": "library",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "New Way Brazil",
            "email": "opensource@gruponewway.com.br"
        }
    ],
    "require": {
        "php" : "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.0",
        "mockery/mockery": "~1.2.0",
        "squizlabs/php_codesniffer": "3.2"
    },
    "autoload": {
        "psr-4": {
            "DateFormatter\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "check" : [
            "@lint",
            "@cs",
            "@test"
        ],
        "lint" : [
            "find ./src -name '*.php' -print0 | xargs -0 -n1 -P8 php -l -d display_errors=0"
        ],
        "cs" : "vendor/bin/phpcs",
        "test" : "vendor/bin/phpunit tests/unit",
        "test-xml" : "vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/coverage.xml --log-junit coverage/junit.xml"
    }
}